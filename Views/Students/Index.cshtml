@model IEnumerable<Gestion_Alumnos_v1.Models.Student>

@{
    ViewData["Title"] = "Index";
}
<div id="container" class="row margin-default">
    <div class="col-lg-12 toast-container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Gestion de Alumnos</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align:right;">
                    <div class="">
                        <a asp-action="Create" class="btn btn-success" title="Crear"><i class="fas fa-plus"></i></a>
                    </div>
                </div>
            </div>
        </nav>
        <div class="card-body">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Documento
                        </th>
                        <th>
                            Telefono
                        </th>
                        <th>
                            Estado
                        </th>
                        <th>
                            Curso
                        </th>
                        <th style="text-align:center;">
                            Modificar|Borrar
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DNI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td id="enabledId">
                                @Html.DisplayFor(modelItem => item.Enabled)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Grade.Name)
                            </td>
                            <td style="text-align:center;">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar"><i class="fas fa-pencil-alt"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Eliminar"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

